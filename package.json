{
  "name": "nodejs-server",
  "version": "1.0.0",
  "description": "A simple HTTP server using Node.js.",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "concurrently \"nodemon app.js\" \"npx @tailwindcss/cli -i style.css -o dist/output.css --watch\"",
    "build:css": "npx @tailwindcss/cli -i style.css -o dist/output.css",
    "watch": "npx @tailwindcss/cli -i style.css -o dist/output.css --watch"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "node": "22.15.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "@tailwindcss/cli": "^4.1.6",
    "nodemon": "^3.1.10",
    "tailwindcss": "^4.1.6"
  }
}
